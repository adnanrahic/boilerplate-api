{
  "name": "boilerplate-api",
  "version": "0.1.0",
  "engines": {
    "node": ">=8.0.0"
  },
  "description": "Lightweight Node.js boilerplate API with Docker support, test coverage and circle.ci support.",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "docker": "nodemon -L app.js",
    "prod": "node app.js",
    "dev": "nodemon app.js",
    "watch": "nodemon --exec 'npm run lint && npm start'",
    "test": "nodemon test.js",
    "integration": "node test.js",
    "lint": "eslint ./",
    "coverage": "npm run lint && nyc npm run integration"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adnanrahic/boilerplate-api"
  },
  "keywords": [
    "node",
    "api",
    "express",
    "boilerplate"
  ],
  "author": "Adnan RahiÄ‡",
  "license": "MIT",
  "dependencies": {
    "async": "^2.5.0",
    "bcryptjs": "^2.4.3",
    "bcryptjs-then": "^1.0.1",
    "body-parser": "^1.16.1",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "jsonwebtoken": "^7.4.2",
    "mongoose": "^4.8.5",
    "nodemon": "^1.12.0",
    "winston": "^3.0.0-rc1"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-plugin-node": "^5.2.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2"
  }
}
